# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET           /                                  controllers.HomeController.index()

# EmotionRecordWithRelations routes
GET           /emotionRecord                     controllers.EmotionRecordController.findAll()
GET           /emotionRecord/:id                 controllers.EmotionRecordController.findById(id: Int)
POST          /emotionRecord                     controllers.EmotionRecordController.insert()
PUT           /emotionRecord/:id                 controllers.EmotionRecordController.update(id: Int)
DELETE        /emotionRecord/:id                 controllers.EmotionRecordController.delete(id: Int)
GET           /emotionRecord/user/:userId        controllers.EmotionRecordController.findAllByUserId(userId: Int)


# User routes
GET           /user                              controllers.UserController.getAllUsers()
GET           /user/:id                          controllers.UserController.getUser(id: Int)
POST          /user                              controllers.UserController.createUser()
PUT           /user/:id                          controllers.UserController.updateUser(id: Int)
DELETE        /user/:id                          controllers.UserController.deleteUser(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)
