# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET           /                                  controllers.HomeController.index()

# EmotionRecordWithRelations routes
GET           /emotionRecord                     controllers.EmotionRecordWithRelationsController.getAll()
GET           /emotionRecord/:id                 controllers.EmotionRecordWithRelationsController.getById(id: Int)
POST          /emotionRecord                     controllers.EmotionRecordWithRelationsController.insert()
PUT           /emotionRecord/:id                 controllers.EmotionRecordWithRelationsController.update(id: Int)
DELETE        /emotionRecord/:id                 controllers.EmotionRecordWithRelationsController.delete(id: Int)
GET           /emotionRecord/user/:userId        controllers.EmotionRecordWithRelationsController.getAllByUserId(userId: Int)

# Emotion routes
GET           /emotion                           controllers.EmotionController.getAllEmotions()
GET           /emotion/:id                       controllers.EmotionController.getEmotionById(id: String)
POST          /emotion                           controllers.EmotionController.insertEmotion()
PUT           /emotion/:id                       controllers.EmotionController.updateEmotion(id: String)
DELETE        /emotion/:id                       controllers.EmotionController.deleteEmotion(id: String)

# User routes
GET           /user                              controllers.UserController.getAllUsers()
GET           /user/:id                          controllers.UserController.getUser(id: Int)
POST          /user                              controllers.UserController.createUser()
PUT           /user/:id                          controllers.UserController.updateUser(id: Int)
DELETE        /user/:id                          controllers.UserController.deleteUser(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)
