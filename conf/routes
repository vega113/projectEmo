# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home page
GET     /                           controllers.FrontendController.index()

# Login
POST          /api/login                             controllers.LoginController.login()




# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /api/summary                controllers.HomeController.appSummary

# EmotionRecordWithRelations routes
POST          /api/emotionRecord                     controllers.EmotionRecordController.insert()
PUT           /api/emotionRecord/:id                 controllers.EmotionRecordController.update(id: Int)
DELETE        /api/emotionRecord/:id                 controllers.EmotionRecordController.delete(id: Int)
GET           /api/emotionRecord/user/:userId        controllers.EmotionRecordController.findAllByUserId(userId: Int)


# User routes

POST          /api/user                              controllers.UserController.createUser()


# Serve static assets under public directory
GET     /*file                      controllers.FrontendController.assetOrDefault(file)

